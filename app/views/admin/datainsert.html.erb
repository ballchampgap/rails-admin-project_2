            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Data User Insert</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">โรคระบาด</li>
                        </ol>
                        <div class="row">
                            <div class="col-xl-3 col-md-6">
                                <div class="card text-white mb-4">
                                      <a class="btn btn-warning" href="/datainsert" >
                                                    โรคระบาด
                                                </a>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card text-white mb-4">
                                     <a class="btn btn-success" href="/datainsert2" >
                                                ศัตรูพืช
                                                </a>
                            </div>
                        </div>
                      
                                          <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                ตารางข้อมูลโรคระบาด
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                            <table class="table table-sm table-hover table-bordered text-center">
                            <thead>
                                <tr>
                              <th scope="col">#</th>
                                    <th scope="col">ชื่อ</th>
                                    <th scope="col" class="text-nowrap" >ชนิดของพืช</th>
                                    <th scope="col">โรคระบาด</th> 
                                    <th scope="col">วัน-เวลา</th>       
                                    <th></th>
                                    <th></th>      
                                </tr>
                            </thead>
                            <tbody>
                        <% @epidemics.each_with_index do |epidemic, index| %>  
                            <tr>
                            <td class="text-nowrap"><%= index+1 %></td>
                            <td class="text-nowrap"><%= epidemic.yname %></td>
                            <td class="text-nowrap"><%= epidemic.plant_type %></td>
                            <td class="text-nowrap"><%= epidemic.data_epidemic %></td>
                            <td class="text-nowrap"><%= epidemic.created_at %></td>
                             <td class="text-nowrap">
                             <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop<%= epidemic.id %>">
                                    Launch static backdrop modal
                                    </button></td>  
                             <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" id="staticBackdrop<%= epidemic.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        ...
                                    </div>
                                </div>
                                </div>
                                </div>

                    <td class="text-nowrap">
                     <%= link_to "ลบข้อมูล", removedata2_path(id: epidemic.id), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger ", :style => "color:white" %>
                    </td>
                     <% end %> 
                    </tr>
                                </tbody>
                                </table>
                        </div>
