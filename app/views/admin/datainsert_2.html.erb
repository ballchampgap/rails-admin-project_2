 <!-- Header -->
  <header class="w3-container" style="padding-top:22px">
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Data User Insert &nbsp<i class="fa fa-keyboard-o" aria-hidden="true"></i></h1>
                        <div class="row">
                            <div class="col-xl-3 col-md-6">
                                <div class="card text-white mb-4">
                                      <a class="btn btn-warning" href="/datainsert" >
                                                    โรคระบาด
                                                </a>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card text-white mb-4">
                                     <a class="btn btn-success" href="/datainsert2" >
                                                ศัตรูพืช
                                                </a>
                            </div>
                        </div>
  <%= search_form_for @q, url: datainsert2_path(@q), html: { method: :get } do |f| %>
                                <%= f.search_field :yname_or_plant_type_or_data_pest_cont, type:"serch" %>
                                <%= f.submit "ค้นหา", class:"btn-secondary text-white" %>
                                <% end %><br>
   
  </header>

   
                      
                                          <br> <div class="card mb-4">
                            <div class="card-header">
                                <i class="fa fa-table" aria-hidden="true"></i>
                                ตารางข้อมูลศัตรูพืช (<%= @pests.count %>)
                            </div>
                            <div class="card-body">
                            <div class="table-responsive">
                            <table class="table table-sm table-hover table-bordered text-center ">
                            <thead>
                                <tr>
                              <th scope="col"><%= sort_link(@q, :id, "ID", default_order: :desc) %></th>
                                    <th scope="col">ชื่อ</th>
                                    <th scope="col" class="text-nowrap" >ชนิดของพืช</th>
                                    <th scope="col">ศัตรูพืช</th> 
                                    <th scope="col">วัน-เวลา</th>     
                                    <th></th>   
                                    <th></th>   
                                </tr>
                            </thead>
                            <tbody>
                        <% @pests.each_with_index do |pest, index| %>  
                            <tr>
                            <td class="text-nowrap"><%= pest.id %></td>
                            <td class="text-nowrap"><%= pest.yname %></td>
                            <td class="text-nowrap"><%= pest.plant_type %></td>
                            <td class="text-nowrap"><%= pest.data_pest %></td>
                            <td class="text-nowrap"><%= pest.created_at %></td>
                            <td class="text-nowrap" ><a href="/pest_info/<%= pest.id %>" class="btn btn-success">รายละเอียด</a></td> 
                    <td class="text-nowrap">
                     <%= link_to "ลบข้อมูล", removedata_path(id: pest.id), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger ", :style => "color:white" %>
                    </td>
                     <% end %> 
                                </tr>
                                </tbody>
                                </table>
                        </div>
                        <div class="digg_pagination">
                                <%= paginate @pests %>
                        </div><br>
                        <p>Export file:  <%= link_to 'xlsx', datainsert2_path(format: :xlsx), target: :_blank %> | <%= link_to 'csv', datainsert2_path(format: :csv), target: :_blank %></p>
                    </div>