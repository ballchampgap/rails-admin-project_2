    <%= form.label :title, class: "col-form-label"%><br>
    <%= form.text_area :section,:readonly => true %>
  </div>

  <div class="field form-group">
    <%= form.label :detils, class: "col-form-label" %><br>
    <%= form.text_area :body,:readonly => true %>
  </div>


