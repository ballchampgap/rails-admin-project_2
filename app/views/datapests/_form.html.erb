<%= form_with  model: @datapest, :html => { :multipart => true } do |form| %>
<div class="field form-group">
    <%= form.label :Plant_Economic, class: "col-form-label" %><br>
    <%= select_tag(:plantecopest_id, options_for_select(@plantecopests), :prompt => "Select add PlantEconomic")%>
  </div>
<div class="field form-group">
    <%= form.label :name_th, class: "col-form-label" %><br>
    <%= form.text_field :name_th %>
  </div>

  <div class="field form-group">
    <%= form.label :name_en, class: "col-form-label"%><br>
    <%= form.text_field :name_en %>
  </div>
  
  <div class="field form-group">
    <%= form.label :body, class: "col-form-label"%><br>
    <%= form.rich_text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class:"btn btn-primary text-white" %>
  </div>
<% end %>
